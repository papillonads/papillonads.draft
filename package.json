{
  "name": "papillonads",
  "description": "Papillon Ads",
  "repository": "https://github.com/papillonads/papillonads.nl",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/src/**/*.{js,jsx,json}": [
      "eslint --ext .js --ext .jsx packages/src/ --fix",
      "prettier --write \"packages/src/**/*.{js,jsx}\"",
      "git add"
    ],
    "packages/src/**/*.{css,scss}": [
      "stylelint \"packages/src/**/*.{css,scss}\" --syntax=scss --fix",
      "prettier --write \"packages/src/**/*.{css,scss}\"",
      "git add"
    ]
  },
  "scripts": {
    "build": "lerna run build --stream",
    "release": "lerna publish",
    "uninstall-packages": "lerna run uninstall-packages --stream",
    "install-packages": "lerna run install-packages --stream",
    "reinstall-packages": "lerna run reinstall-packages --stream",
    "npm-update": "lerna run npm-update",
    "heroku-prebuild": "echo This runs before Heroku installs your dependencies",
    "start": "lerna run serve --stream",
    "heroku-postbuild": "npm run install-packages",
    "deploy-client": "gh-pages -d packages/client/build",
    "deploy": "npm-run-all build deploy-client",
    "start-storybook": "NODE_ENV=develop start-storybook -p 3003 -c .storybook",
    "build-storybook": "NODE_ENV=develop build-storybook -c .storybook -o .storybook-static",
    "test": "lerna exec --concurrency 1 -- npm run test",
    "test:coverage": "lerna exec --concurrency 1 -- npm run test:coverage",
    "lint:format": "lerna run --stream lint:format",
    "ci": "lerna run ci --stream"
  },
  "dependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-proposal-optional-catch-binding": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-classes": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/plugin-transform-spread": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/runtime": "^7.6.3",
    "@storybook/addon-actions": "^5.2.4",
    "@storybook/addon-info": "^5.2.4",
    "@storybook/addon-knobs": "^5.2.4",
    "@storybook/addon-links": "^5.2.4",
    "@storybook/addon-notes": "^5.2.4",
    "@storybook/addons": "^5.2.4",
    "@storybook/react": "^5.2.4",
    "@storybook/theming": "^5.2.4",
    "apollo-client": "^2.6.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-plugin-import-graphql": "^2.7.0",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "classnames": "^2.2.6",
    "codecov": "^3.6.1",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.19.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "gh-pages": "^2.1.1",
    "graphql": "^14.5.8",
    "husky": "^3.0.9",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-enzyme": "^7.1.1",
    "lerna": "^3.18.1",
    "lint-staged": "^9.4.2",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-scss": "^2.0.0",
    "prettier": "^1.18.2",
    "react": "^16.10.2",
    "react-apollo": "^3.1.3",
    "react-dom": "^16.10.2",
    "react-router-dom": "^5.1.2",
    "react-test-renderer": "^16.10.2",
    "regenerator-runtime": "^0.13.3",
    "resolve-url-loader": "^3.1.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.11.1"
  }
}
