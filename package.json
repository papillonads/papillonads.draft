{
  "name": "papillonads",
  "description": "Papillon Ads",
  "repository": "https://github.com/papillonads/papillonads.nl",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/src/**/*.{js,jsx,json}": [
      "eslint --ext .js --ext .jsx packages/src/ --fix",
      "prettier --write \"packages/src/**/*.{js,jsx}\"",
      "git add"
    ],
    "packages/src/**/*.{css,scss}": [
      "stylelint \"packages/src/**/*.{css,scss}\" --syntax=scss --fix",
      "prettier --write \"packages/src/**/*.{css,scss}\"",
      "git add"
    ]
  },
  "scripts": {
    "build": "lerna run build --stream",
    "release": "lerna publish",
    "uninstall-packages": "lerna run uninstall-packages --stream",
    "install-packages": "lerna run install-packages --stream",
    "reinstall-packages": "lerna run reinstall-packages --stream",
    "npm-update": "lerna run npm-update",
    "heroku-prebuild": "echo This runs before Heroku installs your dependencies",
    "start": "lerna run serve --stream",
    "heroku-postbuild": "npm run install-packages",
    "deploy-client": "gh-pages -d packages/client/build",
    "deploy": "npm-run-all build deploy-client",
    "start-storybook": "NODE_ENV=develop start-storybook -p 3003 -c .storybook",
    "build-storybook": "NODE_ENV=develop build-storybook -c .storybook -o .storybook-static",
    "test": "lerna exec --concurrency 1 -- npm run test",
    "test:coverage": "lerna exec --concurrency 1 -- npm run test:coverage",
    "lint:format": "lerna run --stream lint:format",
    "ci": "lerna run ci --stream"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/plugin-transform-spread": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.3.4",
    "@storybook/addon-actions": "^5.0.1",
    "@storybook/addon-info": "^5.0.1",
    "@storybook/addon-knobs": "^5.0.1",
    "@storybook/addon-links": "^5.0.1",
    "@storybook/addon-notes": "^5.0.1",
    "@storybook/addons": "^5.0.1",
    "@storybook/react": "^5.0.1",
    "@storybook/theming": "^5.0.1",
    "apollo-client": "^2.5.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "css-loader": "^2.1.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "gh-pages": "^2.0.1",
    "graphql": "^14.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "jest-enzyme": "^7.0.2",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.16.4",
    "react": "^16.8.4",
    "react-apollo": "^2.5.2",
    "react-dom": "^16.8.4",
    "react-router-dom": "^4.3.1",
    "react-test-renderer": "^16.8.4",
    "regenerator-runtime": "^0.13.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0"
  },
  "dependencies": {
    "husky": "^1.3.1",
    "lerna": "^3.13.1"
  }
}
