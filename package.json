{
  "name": "papillonads",
  "description": "Papillon Ads",
  "repository": "https://github.com/papillonads/papillonads.nl",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "pre-commit": [
    "lint:staged"
  ],
  "lint-staged": {
    "*.js": [
      "pretty-quick",
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "pretty-quick",
      "stylelint --syntax=scss --fix",
      "git add"
    ]
  },
  "scripts": {
    "build": "lerna run build --stream",
    "release": "lerna publish",
    "uninstall-packages": "lerna run uninstall-packages --stream",
    "install-packages": "lerna run install-packages --stream",
    "reinstall-packages": "lerna run reinstall-packages --stream",
    "npm-update": "lerna run npm-update",
    "heroku-prebuild": "echo This runs before Heroku installs your dependencies",
    "start": "lerna run serve --stream",
    "heroku-postbuild": "npm run install-packages",
    "deploy-client": "gh-pages -d packages/client/build",
    "deploy": "npm-run-all build deploy-client",
    "start-storybook": "NODE_ENV=develop start-storybook -p 3003 -c .storybook",
    "build-storybook": "NODE_ENV=develop build-storybook -c .storybook -o .storybook-static",
    "test": "lerna exec --concurrency 1 -- npm run test",
    "prettier-js-init": "npx prettier --write \"**/*.js\"",
    "pretty-quick": "pretty-quick",
    "eslint-js-init": "npx eslint --init",
    "lint": "lerna run --stream lint",
    "ci": "lerna run ci --stream"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/plugin-transform-spread": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.3.4",
    "@ljharb/eslint-config": "^13.1.1",
    "@shinnn/eslint-config-node": "^6.0.2",
    "@storybook/addon-actions": "^4.1.13",
    "@storybook/addon-info": "^4.1.13",
    "@storybook/addon-knobs": "^4.1.13",
    "@storybook/addon-links": "^4.1.13",
    "@storybook/addon-notes": "^4.1.13",
    "@storybook/addon-options": "^4.1.13",
    "@storybook/addons": "^4.1.13",
    "@storybook/react": "^4.1.13",
    "@xotic750/eslint-config-standard-x": "^5.0.0",
    "apollo-client": "^2.5.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "css-loader": "^2.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-logux": "^27.0.0",
    "eslint-config-medikoo-es5": "^2.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-compat": "^2.7.0",
    "eslint-plugin-css-modules": "^2.11.0",
    "eslint-plugin-es5": "^1.3.1",
    "eslint-plugin-eslint-comments": "^3.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-jsdoc": "^3.15.1",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-no-use-extend-native": "^0.3.12",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.3",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "gh-pages": "^2.0.1",
    "graphql": "^14.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "jest-enzyme": "^7.0.1",
    "lint-staged": "^8.1.4",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.8.1",
    "react": "^16.8.3",
    "react-apollo": "^2.5.1",
    "react-dom": "^16.8.3",
    "react-router-dom": "^4.3.1",
    "react-test-renderer": "^16.8.3",
    "regenerator-runtime": "^0.13.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^9.10.1",
    "stylelint-order": "^2.0.0"
  },
  "dependencies": {
    "husky": "^1.3.1",
    "lerna": "^3.13.1"
  }
}
